{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "#"
        ]
      ],
      "type-case" : [
        2,
        "always",
        "lower-case"
      ],
      "subject-case" : [
        2,
        "always",
        [
            "sentence-case",
            "start-case",
            "pascal-case",
            "snake-case"
        ]
      ]
    }

  }
